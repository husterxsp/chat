<form action="/forget" method="POST" style="max-width:300px; margin: 0 auto" >
    {{#if error}}
    <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        {{error}}
    </div>
    {{/if}}
    {{#if success}}
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        {{success}}
    </div>
    {{/if}}
    <div class="form-group">
        <input name="email" type="email" class="form-control" placeholder="请填写用户邮箱" autofocus="autofocus"  autocomplete="off" required/>
    </div>
    <button type="submit" class="btn btn-default btn-block">立即找回密码</button>
</form>